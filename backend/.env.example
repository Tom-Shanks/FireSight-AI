# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys (replace with your actual keys in .env)
WEATHER_API_KEY=your_weather_api_key_here
SATELLITE_API_KEY=your_satellite_api_key_here

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=firesight
DB_USER=postgres
DB_PASSWORD=your_password_here

# AWS Configuration (for production deployment)
AWS_REGION=us-west-2
AWS_LAMBDA_FUNCTION=firesight-api
AWS_S3_BUCKET=firesight-data

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://firesight-ai.github.io 