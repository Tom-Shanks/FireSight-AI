# Server Configuration
PORT=5000
NODE_ENV=development

# External API Keys (replace with your actual keys in .env)
OPENWEATHER_API_KEY=your_openweather_api_key_here
NOAA_API_KEY=your_noaa_api_key_here
NASA_FIRMS_API_KEY=your_nasa_firms_api_key_here
SENTINEL_HUB_API_KEY=your_sentinel_hub_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GEOMAC_API_KEY=your_geomac_api_key_here

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=firesight
DB_USER=postgres
DB_PASSWORD=your_password_here

# AWS Configuration (for production deployment)
AWS_REGION=us-west-2
AWS_LAMBDA_FUNCTION=firesight-api
AWS_S3_BUCKET=firesight-data

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://firesight-ai.github.io 