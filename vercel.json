{
  "version": 2,
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    { 
      "src": "api/**/*.js", 
      "use": "@vercel/node" 
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/build/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 